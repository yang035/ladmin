

// 订单处理右侧备注和记录相关

.aside-over
	width 30%
	height 100%

	position fixed
	top 0
	right 0

	background-color #fff

	transform translateX(100%)
	transition transform 0.5s ease 0s

	>.btn
		width 30px
		height 100px

		position absolute
		top 50%
		left 0

		transform translateX(-100%) translateY(-50%)
		opacity 0.7

		.fa
			transition transform 0.5s ease 0s

		&:hover
			opacity 1


	&.active
		transform translateX(0)

		.btn
			.fa
				transform rotate(180deg)
