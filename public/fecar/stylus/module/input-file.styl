

// 财务管理中所用模块

.m-file
	position relative
	overflow hidden

	.wrap-img
		width 100%
		height 170px

		text-align center

		img
			display inline-block
			max-width 100%
			max-height 100%

		input[type="file"]
			display block

			position absolute
			top 0
			right 0
			z-index -1

			width 100%
			max-height 100%

			text-align right

			cursor pointer
			background-color transparent
			opacity 0

	.del
		display none
		width 30px
		height 30px

		font-size 18px
		text-align center
		line-height 30px
		color #fff

		position absolute
		top 0
		right 15px
		z-index 3

		cursor pointer
		border-radius 5px
		background-color rgba(0, 0, 0, 0.7);

	&:hover
		.del
			display block

	p
		width 100%
		height 20px

		text-align center
		line-height 20px
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
