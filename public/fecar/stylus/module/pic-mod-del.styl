

// 车辆审核中所用

.pic-mod-del
	height 210px

	line-height 20px

	overflow hidden

	>img
		width 100%
		height 190px

		object-fit cover

	>p
		height 20px
		text-overflow()

	&::before
		display none
		content ""

		width 0
		height 50px

		border-left 1px solid #666

		position absolute
		top 0
		left 50%

	.hover-file
		span
			display none

	.hover-maker
		span
			display none

	&:hover
		// &::before
		// 	display block

		.hover-file
			span
				display block

		.hover-maker
			span
				display block
