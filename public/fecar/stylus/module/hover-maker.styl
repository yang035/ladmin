

// 车辆审核中勾选“是否删除”
// 勾选状态下span保持显示

.hover-maker
	display block

	width calc(50% - 15px)
	height 50px

	margin 0

	font-size 13px
	font-weight normal
	line-height 50px
	color #f00

	position absolute
	top 0
	right 15px

	cursor pointer
	user-select none
	box-sizing border-box

	span
		width 100%
		height 100%

		padding-left 40px

		background-color rgba(255, 255, 255, 0.8);

		&::before
			content ""
			width 16px
			height 16px

			border 1px solid #666
			box-sizing border-box

			position absolute
			top ((50px - 18px) / 2)
			left 20px

		&::after
			content ""

			width 10px
			height 6px

			position absolute
			top (((50px - 12px) / 2) + 1px)
			left (((16px - 12px) / 2) + 1px + 20px)
			border-left 2px solid transparent
			border-bottom 2px solid transparent

			transform rotate(-45deg)

	input[type=checkbox]
		width 1px
		height 1px

		position absolute
		bottom 0
		left 0

		opacity 0
		cursor default

		&:checked + span
			display block

			&::after
				border-color #f00
